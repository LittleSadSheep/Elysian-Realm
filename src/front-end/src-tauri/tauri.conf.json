{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "elysian-realm",
  "version": "0.1.0",
  "identifier": "com.elysian-realm.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "elysian-realm",
        "width": 1366,
        "height": 768,
        "minWidth": 480,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
